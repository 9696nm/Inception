# ============================================================================ #
#                         WordPress Dockerfile                                 #
# ============================================================================ #
# NGINX からのリクエストを処理
# ============================================================================ #

# ---------------------------------------------------------------------------- #
# ベースイメージ：Debian 12 (bookworm)
# ---------------------------------------------------------------------------- #

FROM	debian:bookworm

# ---------------------------------------------------------------------------- #
# メタデータ
# ---------------------------------------------------------------------------- #

LABEL	maintainer="hmori" \
		description="WordPress with PHP-FPM for Inception project"

# ---------------------------------------------------------------------------- #
# パッケージのインストール
# ---------------------------------------------------------------------------- #

RUN		apt-get update && apt-get install -y \
		# PHP-FPM：FastCGI Process Manager
		php8.2-fpm \
		# PHP MySQL 拡張
		php8.2-mysql \
		# PHP MySQLi 拡張
		php8.2-mysqli \
		# PHP cURL 拡張
		php8.2-curl \
		# PHP GD 拡張
		php8.2-gd \
		# PHP mbstring 拡張
		php8.2-mbstring \
		# PHP XML 拡張
		php8.2-xml \
		# PHP ZIP 拡張
		php8.2-zip \
		# PHP Imagick 拡張
		php8.2-imagick \
		# PHP Intl 拡張
		php8.2-intl \
		# curl：ファイルダウンロード用
		curl \
		# MariaDB クライアント
		mariadb-client \
		# ゾンビプロセス対策
		tini \
		# 不要なファイルを削除してイメージサイズを削減
		&& apt-get clean \
		&& rm -rf /var/lib/apt/lists/*

# ---------------------------------------------------------------------------- #
# WP-CLI のインストール
# ---------------------------------------------------------------------------- #
# WordPress のインストールと設定を自動化するために使用

# WP-CLI をダウンロード
RUN		curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar \
		# 実行権限を付与
		&& chmod +x wp-cli.phar \
		# システムパスに移動
		&& mv wp-cli.phar /usr/local/bin/wp

# ---------------------------------------------------------------------------- #
# PHP-FPM 設定
# ---------------------------------------------------------------------------- #

# PHP-FPM の設定ファイルをコピー
COPY	conf/www.conf /etc/php/8.2/fpm/pool.d/www.conf

# ---------------------------------------------------------------------------- #
# WordPress のセットアップスクリプトをコピー
# ---------------------------------------------------------------------------- #

# WordPress のダウンロードと設定を行うスクリプトをコピー
COPY	tools/setup-wordpress.sh /usr/local/bin/setup-wordpress.sh

# スクリプトに実行権限を付与
RUN		chmod +x /usr/local/bin/setup-wordpress.sh

# ---------------------------------------------------------------------------- #
# 作業ディレクトリの設定
# ---------------------------------------------------------------------------- #

# WordPress のインストールディレクトリ
WORKDIR	/var/www/html

# ---------------------------------------------------------------------------- #
# PHP-FPM 用のディレクトリを作成
# ---------------------------------------------------------------------------- #

# PHP-FPM のソケット/PID ファイル用ディレクトリを作成
RUN		mkdir -p /run/php && \
		# www-data ユーザーに所有権を付与
		chown -R www-data:www-data /var/www/html /run/php

# ---------------------------------------------------------------------------- #
# ポート公開
# ---------------------------------------------------------------------------- #

# PHP-FPM のデフォルトポート 9000 を公開
EXPOSE	9000

# ---------------------------------------------------------------------------- #
# コンテナ起動コマンド
# ---------------------------------------------------------------------------- #

# Tini を PID 1 として起動
ENTRYPOINT	["/usr/bin/tini", "--"]

# WordPress セットアップスクリプトを実行
CMD			["/usr/local/bin/setup-wordpress.sh"]

